<?xml version="1.0" encoding="utf-8"?>

<robot name="sphere" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="sphere">
    <inertial>
      <origin xyz="0 0 0." rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="meshes/sphere.stl"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="meshes/sphere.stl"/>
      </geometry>
    </collision>
  </link>
</robot>
